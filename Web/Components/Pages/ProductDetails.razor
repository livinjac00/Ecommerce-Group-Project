@page "/product"
@using BackEnd
@rendermode InteractiveServer
@inject NavigationManager Nav

@if (product == null)
{
    <PageTitle>
        Product Not Found
    </PageTitle>
    <h1>Error 404</h1>
    <h5>Product Not Found</h5>
}
else
{
    <PageTitle>
        @product.Name
    </PageTitle>

    <section id="productInfo" class="d-flex w-100">
        <div class="flex-grow-1">
            <h1>@product.Name</h1>
            <h4>$@product.Price</h4>
            <h6>3 remaining</h6>
            <p>@product.CategoryName</p>
            <p>@product.Description</p>
        </div>
        <div style="width: fit-content;">
            <button class="btn btn-primary" @onclick="addToCart">Add To Cart</button>
        </div>
    </section>
    <section id="rateProduct">
        <h3>Please rate this product</h3>
        <div>
            @for (int i = 1; i <= 5; i++)
            {
                int starIndex = i;
                <i id="star@starIndex" class="fs-1 star-icon bi @(currentRating >= starIndex || hoverRating >= starIndex ? "bi-star-fill text-warning" : "bi-star")"
                   @onmouseenter="() => hoverRating = starIndex" @onmouseleave="() => hoverRating = 0" @onclick="() => currentRating = starIndex" style="cursor: pointer;"></i>
            }
        </div>
        <div class="mt-2">
            <textarea @bind="newComment" class="form-control" placeholder="Write your review here..."></textarea>
            <button class="btn btn-success mt-2" @onclick="SubmitReview">Submit Review</button>
            @if (!string.IsNullOrEmpty(submissionMessage))
            {
                <p class="text-success mt-2">@submissionMessage</p>
            }
        </div>
    </section>

    <section id="customerReviews" class="mt-4">
        <h3>Customer Reviews</h3>
        @if (product.Reviews == null || product.Reviews.Count == 0)
        {
            <p>No reviews yet. Be the first to review!</p>
        }
        else
        {
            @foreach (var review in product.Reviews)
            {
                <div class="border border-black rounded p-2 mt-2">
                    <div class="d-flex justify-content-between">
                        <h5>@review.UserName</h5>
                        <small class="text-muted">@review.DateCreated.ToShortDateString()</small>
                    </div>
                    <div>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="bi @(i <= review.Rating ? "bi-star-fill text-warning" : "bi-star")"></i>
                        }
                    </div>
                    <p>@review.Comment</p>
                </div>
            }
        }
    </section>
}




@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string productIdString { get; set; }

    public ProductCollection productCollection = new();
    Product product = null;

    int currentRating = 0;
    int hoverRating = 0;
    string newComment = "";
    string submissionMessage = "";

    protected override void OnInitialized()
    {
        productCollection.Load();

        if (!string.IsNullOrWhiteSpace(productIdString) && Guid.TryParse(productIdString, out Guid productId))
        {
            product = productCollection.GetById(productId);
            
            // Mock some reviews if none exist for demonstration
            if (product != null && (product.Reviews == null || product.Reviews.Count == 0))
            {
                product.Reviews = new List<Review>
                {
                    new Review(product.Id, "Alice", 4, "Great product!"),
                    new Review(product.Id, "Bob", 5, "Excellent product!")
                };
            }
        }
    }

    void SubmitReview()
    {
        if (currentRating == 0)
        {
            submissionMessage = "Please select a rating.";
            return;
        }

        // Mocking "Only purchased users can review" and "Current User"
        string currentUser = "GuestUser"; 
        
        var review = new Review(product.Id, currentUser, currentRating, newComment);
        product.Reviews.Add(review);
        productCollection.Save();

        submissionMessage = "Thank you for your review!";
        newComment = "";
        currentRating = 0;
    }

    void addToCart()
    {
        @* Add product to user's shopping cart *@
    }
}